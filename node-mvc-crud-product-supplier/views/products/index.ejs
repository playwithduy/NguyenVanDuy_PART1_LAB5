<%- include('../partials/header') %>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Danh sách Sản phẩm</h1>
        <a href="/products/new" class="btn btn-primary">Thêm Sản phẩm</a>
    </div>

    <% if (products.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Giá</th>
                        <th>Mô tả</th>
                        <th>Nhà cung cấp</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td>
                                <%= product._id %>
                            </td>
                            <td>
                                <%= product.name %>
                            </td>
                            <td>
                                <%= product.price.toLocaleString('vi-VN') %> VNĐ</td>
                            <td>
                                <%= product.description %>
                            </td>
                            <td>
                                <%= product.supplierId.name %>
                            </td>
                            <td>
                                <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-warning">Sửa</a>
                                <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                Chưa có sản phẩm nào. <a href="/products/new" class="alert-link">Thêm sản phẩm mới</a>.
            </div>
            <% } %>
                <%- include('../partials/footer') %>