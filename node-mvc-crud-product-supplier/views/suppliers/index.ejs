<%- include('../partials/header') %>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Danh sách Nhà cung cấp</h1>
        <a href="/suppliers/new" class="btn btn-primary">Thêm Nhà cung cấp</a>
    </div>

    <% if (suppliers.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% suppliers.forEach(supplier => { %>
                        <tr>
                            <td>
                                <%= supplier._id %>
                            </td>
                            <td>
                                <%= supplier.name %>
                            </td>
                            <td>
                                <%= supplier.address %>
                            </td>
                            <td>
                                <%= supplier.phone %>
                            </td>
                            <td>
                                <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-sm btn-warning">Sửa</a>
                                <form action="/suppliers/<%= supplier._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                Chưa có nhà cung cấp nào. <a href="/suppliers/new" class="alert-link">Thêm nhà cung cấp mới</a>.
            </div>
            <% } %>
                <%- include('../partials/footer') %>